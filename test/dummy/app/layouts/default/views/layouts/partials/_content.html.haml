#columns_wrapper.clearfix
  #inner_columns_wrapper.clearfix
    .clearfix{:id => @node && @node.hide_right_column? ? 'content_extended' : 'content'}
      - if @node.present?
        - cache(:controller => '/nodes', :action => :breadcrumbs, :node => @node.id, :last_updated_at => @node.self_and_ancestors.maximum(:updated_at)) do
          = bread_crumbs_for(@node, :include_root => false, :minimum_crumbs => 2)
      = yield_flash
      = yield
      \&nbsp;
    #second_side_bar
      = render_representations('secondary_column')
  #first_side_bar
    = render_representations('primary_column')
