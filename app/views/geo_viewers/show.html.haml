- content_for :javascript do
  = GMap.header(:without_js => true).gsub('http://', '//').html_safe
  = javascript_include_tag 'devcms-geo'

.geoViewer.regularPage
  %h1= @geo_viewer.title

  - unless @geo_viewer.has_own_content_representation?
    - if @geo_viewer.description.present?
      .htmlField= w @geo_viewer.description

  %p= t('geo_viewers.screen_reader_text', :link => link_to(t('geo_viewers.screen_reader_link'), screenreader_geo_viewer_path(@geo_viewer))).html_safe

  - unless @geo_viewer.has_own_content_representation?
    = render 'filters'

  .gmap{ :id => "geo_viewer_#{@geo_viewer.id}" }
    = static_map_of_addresses @nodes, { :center => @center, :bounds => @bounds, :alt => @geo_viewer.title}

  %noscript= @node_list_lettered

  = javascript_tag(raw @map.to_html(:no_script_tag => true))

  .buttons.clearfix
    = print_button
    .social_buttons
      = social_media_buttons(@geo_viewer)
